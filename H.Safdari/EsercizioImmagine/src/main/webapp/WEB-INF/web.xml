<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>EsercizioImmagine</display-name>

	<servlet>
		<servlet-name>VisualizzaIMG</servlet-name>
		<servlet-class>com.img.servlet.VisualizzaIMG</servlet-class>
		<init-param>
			<param-name>jdbcDriver</param-name>
			<param-value>oracle.jdbc.driver.OracleDriver</param-value>
		</init-param>
		<init-param>
			<param-name>jdbcURL</param-name>
			<param-value>jdbc:oracle:thin:@127.0.0.1:1521:ORCL</param-value>
		</init-param>
		<init-param>
			<param-name>jdbcUsername</param-name>
			<param-value>safy</param-value>
		</init-param>
		<init-param>
			<param-name>jdbcPassword</param-name>
			<param-value>pass</param-value>
		</init-param>
	</servlet>


	<servlet-mapping>
		<servlet-name>VisualizzaIMG</servlet-name>
		<url-pattern>/randomImage</url-pattern>
	</servlet-mapping>


</web-app>